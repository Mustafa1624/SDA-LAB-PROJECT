<script>
function myMap()
{
    myCenter = new google.maps.LatLng(58.28365, 12.28864);
  var mapOptions= {
    center:myCenter,
    zoom:12, scrollwheel: false, draggable: false,
    mapTypeId:google.maps.MapTypeId.ROADMAP
  };
  var map=new google.maps.Map(document.getElementById("googleMap"),mapOptions);

  var marker = new google.maps.Marker({
    position: myCenter,
  });
  marker.setMap(map);
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDqx2BIBttALvf51fHsH6C_YE8uuwdbXbE&callback=myMap"></script>